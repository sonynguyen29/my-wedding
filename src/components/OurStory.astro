---
<div>
    <div class="flex flex-col justify-center items-center gap-5">
        <h5 class="text-3xl font-petit">Our Story</h5>
        <h4 class="text-5xl font-OT">How It Happend</h4>
        <img src="https://nozze-next.netlify.app/_ipx/w_256,q_75/%2F_next%2Fstatic%2Fmedia%2Fsection-title.41f9d59f.png?url=%2F_next%2Fstatic%2Fmedia%2Fsection-title.41f9d59f.png&w=256&q=75" />
    </div>
    <div class="relative story-timeline flex flex-col gap-24 pt-[8rem]">
        <div class="round-shape"></div>
        {DATA.map((item, index) => (
            <div class={`grid grid-cols-2 ${index === 1 ? 'right' : 'left'}`}>
                <div class={`${index === 1 ? 'order-1 pl-20 pr-36' : 'pr-20 pl-36'}`}>
                    <div class={`img-holder relative max-w-[330px] ${index === 1 ? 'mr-auto' : 'ml-auto'}`}> 
                        <img class="ml-auto" width="350" height="450" src={item.image} />
                        {index === 0 && (
                            <div class="absolute top-[-80px] left-[-80px] z-[-1]">
                                <img  src="https://nozze-next.netlify.app/_ipx/w_640,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-1.27e394ad.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-1.27e394ad.png&w=640&q=75" />
                            </div>
                            <div class="absolute bottom-[-75px] left-[-85px] z-[-1]">
                                <img src="https://nozze-next.netlify.app/_ipx/w_640,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-2.f0a46a86.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-2.f0a46a86.png&w=640&q=75" />
                            </div>
                        )}
                        {index === 1 && (
                            <div class="absolute top-[-80px] right-[-80px] z-[-1]">
                                <img  src="https://nozze-next.netlify.app/_ipx/w_384,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-3.efbcdb12.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-3.efbcdb12.png&w=384&q=75" />
                            </div>
                            <div class="absolute bottom-[-75px] right-[-85px] z-[-1]">
                                <img src="https://nozze-next.netlify.app/_ipx/w_640,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-4.f15353b9.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-4.f15353b9.png&w=640&q=75" />
                            </div>
                        )}
                        {index === 2 && (
                            <div class="absolute top-[-80px] left-[-80px] z-[-1]">
                                <img  src="https://nozze-next.netlify.app/_ipx/w_384,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-5.5e0b03f0.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-5.5e0b03f0.png&w=384&q=75" />
                            </div>
                            <div class="absolute bottom-[-75px] left-[-85px] z-[-1]">
                                <img src="https://nozze-next.netlify.app/_ipx/w_640,q_75/%2F_next%2Fstatic%2Fmedia%2Fshape-6.b49c233b.png?url=%2F_next%2Fstatic%2Fmedia%2Fshape-6.b49c233b.png&w=640&q=75" />
                            </div>
                        )}
                    </div>
                </div>
                <div class={`relative ${index === 1 ? 'pr-20 pl-36' : 'pl-20 pr-36'}`}>
                    <span class="heart flex justify-center items-center">
                        <ion-icon class="text-[#5d7c78] text-3xl" name="heart"></ion-icon>
                    </span>
                    <div class={`flex flex-col justify-center ${index === 1 ? 'items-end' : 'item-start'} gap-5 h-full`}>
                        <div>
                            <div class="text-[#c8a898] text-lg mb-3">{item.time}</div>
                            <div class="text-5xl font-OT">{item.title}</div>
                        </div>
                        <div class={`text-lg font-light ${index === 1 ? 'text-right' : 'text-left'}`}>{item.description}</div>
                    </div>
                </div>
            </div>
        ))}
        <div class="relative">
            <div class="round-shape"></div>
        </div>
    </div>
</div>

<style>
    .heart {
        background-color: #dfe3e3;
        width: 50px;
        height: 50px;
        line-height: 50px;
        text-align: center;
        position: absolute;
        left: -25px;
        top: 50%;
        transform: translateY(-50%);
        border-radius: 50%;
        z-index: 10;
    }

    .right .heart { 
        left: auto;
        right: -22px;
    }

    .story-timeline .img-holder::before {
        position: absolute;
        left: 3%;
        top: 3%;
        width: 94%;
        height: 94%;
        content: "";
        border: 1px solid #fff;
        border-radius: 175px 175px 0 175px;
    }

    .story-timeline .right .img-holder:before {
        border-radius: 175px 175px 175px 0;
    }

    .story-timeline .left img { 
        border-radius: 175px 175px 0 175px;
    }

    .story-timeline .right img { 
        border-radius: 175px 175px 175px 0;;
    }

    .round-shape {
        background: #fff;
        width: 20px;
        height: 20px;
        position: absolute;
        left: 50%;
        top: 0;
        border: 1px solid #5d7c78;
        transform: translateX(-50%);
        border-radius: 50%;
        z-index: 1;
    }

    .round-shape:before {
        position: absolute;
        left: 2px;
        top: 2px;
        width: 14px;
        height: 14px;
        content: "";
        background: #5d7c78;
        border-radius: 50%;
    }

    .story-timeline:after { 
        content: "";
        background: #cee0ef;
        width: 2px;
        height: 100%;
        position: absolute;
        left: 50%;
        top: 0;
        transform: translateX(-50%);
    }
</style>