<div class="grid grid-cols-[0.5fr_1fr_0.5fr] gap-5">
    <div class="flex flex-col items-center flex-end h-full gap-10">
        <h2 class="text-5xl font-bold font-petit">
            Dat Nguyen
        </h2>
        <div class="flex flex-row gap-5">
            <a href=""><ion-icon class="text-[#c8a898] text-2xl" name="logo-facebook"></ion-icon></a>
            <a href=""><ion-icon class="text-[#c8a898] text-2xl" name="logo-instagram"></ion-icon></a>
        </div>
        <div class="relative hero-groom-block">
            <img src="https://nozze-next.netlify.app/_ipx/w_750,q_75/%2F_next%2Fstatic%2Fmedia%2Fst1.0398d774.jpg?url=%2F_next%2Fstatic%2Fmedia%2Fst1.0398d774.jpg&w=750&q=75" />
        </div>
    </div>
    <div class="flex items-center mx-auto">
        <div class="hero-main-block relative">
            <img class="rounded-[50%]" src="https://nozze-next.netlify.app/_ipx/w_1200,q_75/%2F_next%2Fstatic%2Fmedia%2Fst2.bdee2b14.jpg?url=%2F_next%2Fstatic%2Fmedia%2Fst2.bdee2b14.jpg&w=1200&q=75" />
        </div>
    </div>
    <div class="flex flex-col items-center flex-start h-full gap-10">
        <div class="relative hero-bride-block">
            <img src="https://nozze-next.netlify.app/_ipx/w_750,q_75/%2F_next%2Fstatic%2Fmedia%2Fst3.cdca6ea5.jpg?url=%2F_next%2Fstatic%2Fmedia%2Fst3.cdca6ea5.jpg&w=750&q=75" />
        </div>

        <div class="flex flex-row gap-5">
            <a href=""><ion-icon class="text-[#c8a898] text-2xl" name="logo-facebook"></ion-icon></a>
            <a href=""><ion-icon class="text-[#c8a898] text-2xl" name="logo-instagram"></ion-icon></a>
        </div>
        <h2 class="text-5xl font-bold font-petit">
            Yen Nguyen
        </h2>
    </div>
</div>

<style>
	.hero-groom-block::before, .hero-bride-block::before  { 
		position: absolute;
		left: 3%;
		top: 2%;
		width: 94%;
		height: 95%;
		content: "";
		border: 1px solid #fff;
	}
	.hero-groom-block::before, .hero-groom-block img { 
		border-radius: 175px 175px 175px 0;
	}
	.hero-bride-block::before, .hero-bride-block img { 
		border-radius: 175px 0 175px 175px;
	}

	.hero-main-block::before{ 
    	position: absolute;
		border-radius: 50%;
		width: 100%;
		height: 100%;
		border-color: #5d7c78;
		left: 0;
		top: 0;
    	content: "";
		transform: rotate(26.25deg);
		border: 1px solid #5d7c78;
	}

</style>
